@model IEnumerable<CondominioService.DenunciaContext.Application.ViewModels.DetalhesDenunciaViewModel>

@{
    ViewData["Title"] = "Lista de Denúncias";
}

<h1>Lista de Denúncias</h1>

<p>
    <hr />
    <a asp-action="NovaDenuncia" class="btn btn-success">
        <i class="fa fa-plus-circle"></i> <span title="Novo" class="glyphicon glyphicon-plus-sign"></span> Nova Denúncia
    </a>
</p>
<table class="table table-hover"
       data-locale="pt-BR"
       data-toolbar="#toolbar" data-toggle="table"
       data-id-field="id" data-page-list="[10, 25, 50, 100, ALL]" data-pagination="true"
       data-striped="true"
       data-search="true"
       data-search-align="left" data-buttons-align="right" data-toolbar-align="right">
    <thead>
        <tr>
            <th data-field="Descricao">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th data-field="CriadoAs">
                @Html.DisplayNameFor(model => model.CriadoAs)
            </th>
            <th data-field="AtualizadoAs">
                @Html.DisplayNameFor(model => model.AtualizadoAs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CriadoAs)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AtualizadoAs)
                </td>
                <td>
                    <div style="text-align:center;">
                        <a asp-action="EditarDenuncia" asp-route-id="@item.Id" class="edit text-info" style="cursor: pointer; margin:10px;" title="Editar"><i class="fa fa-edit"></i></a> |
                        @*@Html.ActionLink("Editar", "EditarDenuncia", new { id = item.Id }) |*@
                        <a asp-action="DetalhesDenuncia" asp-route-id="@item.Id" class="remove text-warning" style="cursor: pointer; margin:10px;" title="Detalhes"><i class="fa fa-search-plus"></i></a> |
                        @*@Html.ActionLink("Detalhe", "DetalhesDenuncia", new { id = item.Id }) |*@
                        @*@Html.ActionLink("Deletar", "Delete", new { id = item.Id })*@
                        <a asp-action="Delete" asp-route-id="@item.Id" class="remove text-danger" style="cursor: pointer; margin:10px;" title="Deletar"><i class="fa fa-trash"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {

    <script src="~/js/bootstrap-table/bootstrap-table.min.js"></script>
    <script src="~/js/bootstrap-table/bootstrap-table-locale-all.min.js"></script>
    <link rel="stylesheet" href="~/css/bootstrap-table.min.css">
}