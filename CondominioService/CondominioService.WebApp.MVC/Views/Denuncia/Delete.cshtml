@model CondominioService.DenunciaContext.Application.ViewModels.DetalhesDenunciaViewModel

@{
    ViewData["Title"] = "Confirmação de Deleção";
}
<h3>Você tem certeza que deseja deletar esta denúncia?</h3>
<hr />
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CriadoAs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CriadoAs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AtualizadoAs)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AtualizadoAs)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
</div>

<div>
    <hr />
    <a asp-action="ListaDenuncia" class="btn btn-info">
        <i class="fa fa-reply"></i> <span title="Voltar Para a Lista" class="glyphicon glyphicon-plus-sign"></span> Voltar para a lista
    </a>
</div>
